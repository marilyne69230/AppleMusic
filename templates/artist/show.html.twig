{% extends 'base.html.twig' %}

{% block title %}Artist{% endblock %}

{% block body %}
    <h1>Artist</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artist.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ artist.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ artist.lastName }}</td>
            </tr>
        </tbody>
    </table>

    <h2>Liste des films</h2>

    <table class="table">
        <tbody>
            {% for music in artist.musics %}
            <tr>
                <th>Title</th>
                <td>{{ music.name }}</td>
            </tr>
            <tr>
                <th>ReleaseDate</th>
                <td>{{ music.releaseDate ? music.releaseDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_artist_index') }}">back to list</a>

    <a href="{{ path('app_artist_edit', {'id': artist.id}) }}">edit</a>

    {{ include('artist/_delete_form.html.twig') }}
{% endblock %}
